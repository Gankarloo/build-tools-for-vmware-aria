{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "incremental": true,
        "pretty": true,
        "target": "es5",
        "rootDir": ".",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "noEmitOnError": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "newLine": "lf"
    },
    "outDir": "dist"
}
